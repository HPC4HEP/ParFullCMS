#
# Template paths
# Edit these only if you require Geant4 to be found relative to the
# location of this modulefile
#
set geant4_install_prefix "/geant4"
set geant4_install_bindir "/geant4/bin"
set geant4_install_libdir "/geant4/lib64"

#
# Provide help and whatis responses
#
proc ModulesHelp { } {
  puts stderr "Configures your environment for the Geant4 toolkit v10.1.1"
  puts stderr "This module configures the environment as needed to build Geant4 applications"
  puts stderr "using CMake or other build systems via the information provided"
  puts stderr "by the geant4-config application."
  puts stderr ""
  puts stderr "For more informatation on Geant4, see the main webpage at:"
  puts stderr ""
  puts stderr "http://geant4.cern.ch"
  puts stderr ""
}

module-whatis "Geant4 toolkit libraries, v10.1.1"

#
# Core Variables/Paths
#
prepend-path PATH $geant4_install_bindir
prepend-path LD_LIBRARY_PATH $geant4_install_libdir

#
# Resource paths
#
array set G4DATASETS [list  G4NEUTRONHPDATA /geant4/share/Geant4-10.1.1/data/G4NDL4.5 G4LEDATA /geant4/share/Geant4-10.1.1/data/G4EMLOW6.41 G4LEVELGAMMADATA /geant4/share/Geant4-10.1.1/data/PhotonEvaporation3.1 G4RADIOACTIVEDATA /geant4/share/Geant4-10.1.1/data/RadioactiveDecay4.2 G4NEUTRONXSDATA /geant4/share/Geant4-10.1.1/data/G4NEUTRONXS1.4 G4PIIDATA /geant4/share/Geant4-10.1.1/data/G4PII1.3 G4REALSURFACEDATA /geant4/share/Geant4-10.1.1/data/RealSurface1.0 G4SAIDXSDATA /geant4/share/Geant4-10.1.1/data/G4SAIDDATA1.1 G4ABLADATA /geant4/share/Geant4-10.1.1/data/G4ABLA3.0]
